<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
          fx:controller="huellatorniquete.controllers.MainController">
    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <children>
        <!-- Panel izquierdo (50% de ancho) -->
        <VBox GridPane.columnIndex="0" styleClass="left-pane" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="buscarTextField" promptText="Buscar" HBox.hgrow="ALWAYS" />
                <Button text="Buscar" styleClass="search-button" />
                <Button text="Actualizar" styleClass="update-button" />
            </HBox>
            <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                <Image url="/huellatorniquete/images/logo.jpeg" />
            </ImageView>
            <Label text="1" styleClass="id-label" />
            <GridPane vgap="10" hgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="info-label" />
                <Label fx:id="nameLabel" text="---" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="info-value" />
                <Label text="Sucursal:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="info-label" />
                <Label fx:id="branchLabel" text="---" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="info-value" />
                <Label text="Membresía:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="info-label" />
                <Label fx:id="membershipLabel" text="---" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="info-value" />
                <Label text="Duración:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="info-label" />
                <Label fx:id="durationLabel" text="---" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="info-value" />
                <Label text="Fecha Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="info-label" />
                <Label fx:id="startDateLabel" text="---" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="info-value" />
                <Label text="Fecha Fin:" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="info-label" />
                <Label fx:id="endDateLabel" text="---" GridPane.columnIndex="1" GridPane.rowIndex="5" styleClass="info-value" />
            </GridPane>
            <Label fx:id="membershipStatusLabel" text="Sin membresía" styleClass="membership-status" />
        </VBox>
        
        <!-- Panel derecho (50% de ancho) -->
        <StackPane GridPane.columnIndex="1" styleClass="right-pane">
            <children>
                <VBox alignment="TOP_CENTER" spacing="20">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                    <Label text="Bienvenidos!" styleClass="fraseWelcome" />
                    <ImageView fitWidth="200" preserveRatio="true">
                        <Image url="/huellatorniquete/images/logo.jpeg" />
                    </ImageView>
                    <Label fx:id="labelMotivacion" text="El único día fácil fue ayer" styleClass="fraseMotivacion" />
                </VBox>
            </children>
        </StackPane>
    </children>
</GridPane>